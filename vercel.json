{
  "version": 2,
  "buildCommand": "echo 'Using pre-built frontend from web/dist'",
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/auth/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/health",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*\\..+)",
      "dest": "/web/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web/dist/index.html"
    }
  ]
}