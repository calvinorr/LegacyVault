# .env.example
# Copy this file to .env and fill in the secrets. Never commit your .env to version control.

# Server
PORT=3000
FRONTEND_URL=http://localhost:3000

# Google OAuth (create credentials in Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# JWT Secrets (use strong, random values - at least 64 characters)
# You can generate these with: openssl rand -base64 64
JWT_SECRET=replace-with-a-strong-random-value-at-least-64-chars
JWT_REFRESH_SECRET=replace-with-another-strong-random-value-at-least-64-chars

# MongoDB (use Atlas connection string in production)
# Example local: mongodb://mongo:27017/household_vault
MONGO_URI=mongodb://mongo:27017/household_vault

# Allowed origin for CORS (set to frontend URL in production)
ALLOWED_ORIGIN=http://localhost:3000

# Environment (development or production)
NODE_ENV=development
